{
  "compileOnSave": false,
  "include": [
    "src/**/*.ts",
    "src/assets/web3providertest.js",
    "environment/set_env.ts",
    "scripts/*.ts", "src/pages/DID/services/global.applicationdid.service.tsx", "src/pages/DID/services/global.publication.service.tsx",
  ],
  "exclude": [
    "node_modules",
    "plugins",
    "platforms",
    "origin_platforms",
    //"www"
  ],
  "compilerOptions": {
    "noImplicitAny": false,
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types",
    ],
    "lib": [
      "es2015",
      "dom"
    ],
  }
  
}
